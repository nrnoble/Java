				nrnoble.Utilities.insertFruit(dbConnection, fruit); 
				System.out.println("Query Successful\r\r");
			}
			else if (selection == '2')
			{
				System.out.println("Executing SQL query: " + fruit.sqlInsertQuery());
				nrnoble.Utilities.insertFruit(dbConnection, fruit); 
