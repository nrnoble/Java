package nrnoble;

public class Main
{

	

	public Main()
	{
		// Nothing to do here.
	}

	public static void main(String[] args)
	{
		//shift1(1);
		for (int x = 0b00000000; x <= 0b00001000; x++)
		{
			displayIntAsBinary(x,0b00001000);
		}

	}
	

	
	
	public static void displayIntAsBinary (int _num, int _numOfbits)
	{
		String binString = "";	
		int mask = 0b00000001;
		for (int bitIndex = 0; bitIndex < _numOfbits; bitIndex++)
		{	
			int result = (_num & mask);
			binString += bitToString(result);
			mask =  (mask << 0b00000001);
		}
		binString = new StringBuilder(binString).reverse().toString();
		System.out.println(binString);
	}

	public static String bitToString(int bit)
	{
		if (bit == 0)
		{
			return "0";
		}
		
		return "1";	
	}

}
