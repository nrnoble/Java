	public void setFalse(int index)
	{
		// this.bitArray = 0;
	}
	
	boolean isTrue(int index)
	{
		// this.bitArray = 0;
		return false;	
	}
	
	
	private int getMask (int _index)
	{
		int indexPointer = 0;
		int mask = 0;
		while (indexPointer <= _index)
		{
			mask = mask << SHIFT;
		}
		
		return mask;
		
	}
	
}
