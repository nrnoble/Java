package nrnoble;

public class Main
{

	public Main()
	{
		// Nothing to initialize.
	}

	public static void main(String[] args)
	{
		// TODO Auto-generated method stub
		
		BooleanArray bitArray = new BooleanArray();
		System.out.println("Starting Bit Tests");
		System.out.println();
		
		System.out.println("           FEDCBA9876543210FEDCBA9876543210");
		System.out.println("Show Bits: " + bitArray.bitString());
		System.out.println();
		
		System.out.println("Turning on bits: 0,5,6,8,24,31");
		bitArray.setTrue(0);
		bitArray.setTrue(5);
		bitArray.setTrue(6);
		bitArray.setTrue(8);
		bitArray.setTrue(24);
		bitArray.setTrue(31);
		for (int index = 0; index <=8; index++ )
		if (bitArray.isTrue(index))
		{
			System.out.println("Bit "+ index + " is True");
		}
		System.out.println("           FEDCBA9876543210FEDCBA9876543210");
		System.out.println("Show Bits: " + bitArray.bitString());
		System.out.println();
		
		
		System.out.println("Turning off bits: 0,5,6,8, 24, 31");
		bitArray.setFalse(0);
		bitArray.setFalse(5);
		bitArray.setFalse(6);
		bitArray.setFalse(8);
		bitArray.setFalse(24);
		bitArray.setFalse(32);
		
		for (int index = 0; index  <= 31; index++ )
		if (!bitArray.isTrue(index))
		{
			System.out.println("Bit " + index + " is False");
		}
		System.out.println("           FEDCBA9876543210FEDCBA9876543210");
		System.out.println("Show Bits: " + bitArray.bitString());
		
		
		
		System.out.println(".... Tests are done");
		
		
		
		

	}

}
